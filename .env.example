# MongoDB
MONGODB_URI=your_mongodb_connection_string

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Base URL (for internal API calls)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# CoinGecko API
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
COINGECKO_API_KEY=your_coingecko_api_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# WalletConnect Project ID (Get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Vercel AI Gateway API Key (Recommended - Unified access to 100+ AI models)
# Get from: Vercel Dashboard → Your Project → AI Gateway → API Keys
AI_GATEWAY_API_KEY=vck_your_gateway_key_here

# OpenAI API Key (Optional - Only needed if NOT using AI Gateway)
# Get from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your_openai_key_here

# RPC URLs for Portfolio (optional - defaults to public RPCs)
ETHEREUM_RPC_URL=https://eth.llamarpc.com
